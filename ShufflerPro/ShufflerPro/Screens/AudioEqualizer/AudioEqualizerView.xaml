<mah:MetroWindow
    x:Class="ShufflerPro.Screens.AudioEqualizer.AudioEqualizerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:wpf="clr-namespace:ShufflerPro.Framework.WPF"
    xmlns:audioEqualizer="clr-namespace:ShufflerPro.Screens.AudioEqualizer"
    xmlns:attachedProperties="clr-namespace:ShufflerPro.Framework.WPF.AttachedProperties"
    Height="325"
    Width="425"
    attachedProperties:ScreenNameAttachedProperty.Name="Audio Equalizer"
    WindowStartupLocation="CenterOwner"
    TitleCharacterCasing="Normal"
    WindowStyle="ToolWindow"
    mc:Ignorable="d" d:DataContext="{d:DesignInstance audioEqualizer:AudioEqualizerViewModel}">
    <Window.InputBindings>
        <KeyBinding
            Key="Escape"
            Command="{x:Static wpf:CloseWindowCommand.Instance}"
            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />
    </Window.InputBindings>
    <Grid
        Margin="2"
        HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Name="ResetBands"
            Cursor="Hand"
            BorderBrush="{DynamicResource MahApps.Brushes.DataGrid.Selection.Background}"
            Width="100"
            Margin="10"
            Height="30"
            Content="Reset" />
        <Grid
            Grid.Column="0"
            Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Content="Freq." />
            <Label
                Grid.Row="1"
                VerticalAlignment="Top"
                Content="+30" />
            <Label
                Grid.Row="2"
                VerticalAlignment="Bottom"
                Content="-30" />
        </Grid>
        <StackPanel
            Grid.Column="1"
            Grid.Row="1"
            Orientation="Horizontal">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="100" />
                <Slider
                    Grid.Row="1"
                    Margin="8"
                    Style="{DynamicResource MahApps.Styles.Slider.Flat}"
                    Maximum="{Binding MaximumGain}"
                    Minimum="{Binding MinimumGain}"
                    Orientation="Vertical"
                    Value="{Binding Band1, Mode=TwoWay}" />
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="200" />
                <Slider
                    Margin="8"
                    Grid.Row="1"
                    Style="{DynamicResource MahApps.Styles.Slider.Flat}"
                    Maximum="{Binding MaximumGain}"
                    Minimum="{Binding MinimumGain}"
                    Orientation="Vertical"
                    Value="{Binding Band2, Mode=TwoWay}" />
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="400" />
                <Slider
                    Grid.Row="1"
                    Margin="8"
                    Style="{DynamicResource MahApps.Styles.Slider.Flat}"
                    Maximum="{Binding MaximumGain}"
                    Minimum="{Binding MinimumGain}"
                    Orientation="Vertical"
                    Value="{Binding Band3, Mode=TwoWay}" />
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="800" />
                <Slider
                    Grid.Row="1"
                    Margin="8"
                    Style="{DynamicResource MahApps.Styles.Slider.Flat}"
                    Maximum="{Binding MaximumGain}"
                    Minimum="{Binding MinimumGain}"
                    Orientation="Vertical"
                    Value="{Binding Band4, Mode=TwoWay}" />
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="1.2k" />
                <Slider
                    Grid.Row="1"
                    Margin="8"
                    Style="{DynamicResource MahApps.Styles.Slider.Flat}"
                    Maximum="{Binding MaximumGain}"
                    Minimum="{Binding MinimumGain}"
                    Orientation="Vertical"
                    Value="{Binding Band5, Mode=TwoWay}" />
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="2.4k" />
                <Slider
                    Margin="8"
                    Grid.Row="1"
                    Style="{DynamicResource MahApps.Styles.Slider.Flat}"
                    Maximum="{Binding MaximumGain}"
                    Minimum="{Binding MinimumGain}"
                    Orientation="Vertical"
                    Value="{Binding Band6, Mode=TwoWay}" />
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="4.8k" />
                <Slider
                    Grid.Row="1"
                    Margin="8"
                    Style="{DynamicResource MahApps.Styles.Slider.Flat}"
                    Maximum="{Binding MaximumGain}"
                    Minimum="{Binding MinimumGain}"
                    Orientation="Vertical"
                    Value="{Binding Band7, Mode=TwoWay}" />

            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="9.6k" />
                <Slider
                    Grid.Row="1"
                    Margin="8"
                    Style="{DynamicResource MahApps.Styles.Slider.Flat}"
                    Maximum="{Binding MaximumGain}"
                    Minimum="{Binding MinimumGain}"
                    Orientation="Vertical"
                    Value="{Binding Band8, Mode=TwoWay}" />
            </Grid>
        </StackPanel>
        <Button
            Grid.Column="0"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Name="CloseWindow"
            Cursor="Hand"
            BorderBrush="{DynamicResource MahApps.Brushes.DataGrid.Selection.Background}"
            Width="100"
            Margin="10"
            Height="30"
            Content="Close" />
    </Grid>
</mah:MetroWindow>